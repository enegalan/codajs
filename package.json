{
  "name": "codajs",
  "productName": "CodaJS",
  "version": "0.1.0",
  "description": "A high-performance interactive JavaScript development environment",
  "main": "dist/main/main.js",
  "author": "",
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && npm run build:utility",
    "build:main": "webpack --config webpack.main.config.js",
    "build:preload": "webpack --config webpack.preload.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:utility": "webpack --config webpack.utility.config.js",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\" \"npm run dev:utility\" \"wait-on dist/main/main.js && electron .\"",
    "dev:main": "webpack --config webpack.main.config.js --watch --mode development",
    "dev:preload": "webpack --config webpack.preload.config.js --watch --mode development",
    "dev:renderer": "webpack --config webpack.renderer.config.js --watch --mode development",
    "dev:utility": "webpack --config webpack.utility.config.js --watch --mode development",
    "start": "electron .",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "generate-icons": "./scripts/generate-icons.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "monaco-editor": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.16.0"
  },
  "optionalDependencies": {
    "isolated-vm": "^4.7.1",
    "node-web-audio-api": "^1.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.7",
    "@babel/preset-typescript": "^7.23.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.9.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "monaco-editor-webpack-plugin": "^7.1.1",
    "prettier": "^3.1.1",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.codajs.app",
    "productName": "CodaJS",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "icon": "assets/icon_macos.png",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets/linux",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
